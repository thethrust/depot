<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Depot</title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,300italic' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize.css" %>
    <%= stylesheet_link_tag "normalize-opentype.css" %>
    <%= stylesheet_link_tag "html5-boilerplate.css" %>
    <%= stylesheet_link_tag "skeleton" %>
    <%= stylesheet_link_tag "all" %>
  </head>
  <body>

    <div id="main" class="main" role="main">
      <div class="main-inner container" role="main">
        <%= yield %>
      </div>
    </div>
    <div id="back-to-top" class="button"><a href="#"><span class="arrow up">&uarr;</span></a></div>

    <%# partial("partials/footer", :locals => {}) %>
    <%= javascript_include_tag  "all" %>
  </body>
</html>
