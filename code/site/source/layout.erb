<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Depot</title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,300italic' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "all" %>
  </head>
  <body>
    <div class="navigation">
      <% fixes = { "org" => "organisation", "toolsused" => "tools used", "orgtype" => "type of organisation" } %>
      <ul class="nav-list">
        <li class="nav-item"><%= link_to 'Home', '/' %></li>
        <% data["ind-all"]["meta"].keys.each do |k| %>
        <li class="nav-item"><a href="/<%= k %>.html"><%= (fixes.has_key? k ) ? fixes[k] : k %></a></li>
        <% end %>
      </ul>
    </div>
    <div id="main" class="main" role="main">
      <%= yield %>
    </div>

    <%= partial("partials/footer", :locals => {}) %>
  </body>
</html>
