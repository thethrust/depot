<!-- RELATED :: TAGS -->

<% related_tags = tag_list.map { |r| r["tags"] }.flatten.uniq %>
<% if !related_tags.nil? %>
<section class="border-top related tags">
  <div class="section-inner">
    <h4>Related Tags <span class="entry-count"><%= related_tags.length %></span></h4>
    <ul class="link-list in-columns-two">
      <div class="link-set">
        <% (0..10).each do |i| %>
          <% if !related_tags[i].nil? %>
            <% item = related_tags[i] %>
            <% span_class1 = ((i + 1) < 10) ? "class='comma'" : "" %>
                <li class="link-item entry"><a href="/tags/<%= sluggify(item) %>/"><span <%= span_class1 %>><%= item %></span></a></li>
          <% end %>
        <% end %>
        <% (11..20).each do |i| %>
          <% if !related_tags[i].nil? %>
            <% item = related_tags[i] %>
            <% span_class2 = ((i + 1) < 21) ? "class='comma'" : "" %>
                <li class="link-item entry"><a href="/tags/<%= sluggify(item) %>/"><span <%= span_class2 %>><%= item %></span></a></li>
          <% end %>
        <% end %>
      </div>
    </ul>
  </div>
</section>
<% end %><!-- /END -->