<div class="header u-full-width border-bottom">
  <h1><a class="headline" href="/">Depot</a></h1>
  <h3 class="subhead">An encyclopedia of interactive news.<span class="<%= header_class %>"> There are currently <%= data["ind-all"]["projects"].length %> projects.</span></h3>
</div>

<div class="navigation u-full-width border-bottom">
  <ul class="nav-list">
    <li class="nav-item"><%= link_to 'Home', '/' %></li>
    <% data["ind-all"]["meta"].keys.reject{ |k| k == "orgtype" || k == "section" }.each do |k| %>
    <% fix_key = (fixes.has_key? k ) ? fixes[k] : k %>
    <% is_active = (k == active_tag) ? "is-active" : ""  %>
    <li class="nav-item <%= is_active %>"><a href="/<%= k %>/"><%= fix_key %></a></li>
    <% end %>
  </ul>
</div>