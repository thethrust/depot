<!-- RELATED :: ORGS -->
<% related_orgs = tag_list.map { |r| r["org"] }.flatten.uniq %>
<% if !related_orgs.nil? %>
<section class="border-top related orgs">
  <div class="section-inner">
    <h4>Related Organizations <span class="entry-count"><%= related_orgs.length %></span></h4>
    <ul class="link-list in-columns-two">
      <div class="link-set">
        <% (0..10).each do |i| %>
          <% if !related_orgs[i].nil? %>
            <% item = related_orgs[i] %>
            <% span_class1 = ((i + 1) < 10) ? "class='comma'" : "" %>
                <li class="link-item entry"><a href="/org/<%= sluggify(item) %>/"><span <%= span_class1 %>><%= item %></span></a></li>
          <% end %>
        <% end %>
        <% (11..20).each do |i| %>
          <% if !related_orgs[i].nil? %>
            <% item = related_orgs[i] %>
            <% span_class2 = ((i + 1) < 21) ? "class='comma'" : "" %>
                <li class="link-item entry"><a href="/org/<%= sluggify(item) %>/"><span <%= span_class2 %>><%= item %></span></a></li>
          <% end %>
        <% end %>
      </div>
    </ul>
  </div>
</section>
<% end %><!-- /END -->