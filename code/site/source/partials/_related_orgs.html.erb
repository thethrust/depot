<!-- RELATED :: ORGS -->
<% related_orgs = tag_list.map { |r| r["org"] }.flatten.uniq %>
<% if !related_orgs.nil? %>
<section class="border-top related orgs">
  <div class="section-inner">
    <h4>Related Organizations <span class="entry-count"><%= related_orgs.length %></span></h4>
    <ul class="link-list in-columns-two">
      <div class="link-set">
        <% (0..10).each do |i| %>
          <% if !related_orgs[i].nil? %>
            <% item = related_orgs[i] %>
            <%= partial("partials/link_item", :locals => { :slug => sluggify(item), :item => item, :type => "org" }) %>
          <% end %>
        <% end %>
        <% (11..20).each do |i| %>
          <% if !related_orgs[i].nil? %>
            <% item = related_orgs[i] %>
            <%= partial("partials/link_item", :locals => { :slug => sluggify(item), :item => item, :type => "org" }) %>
          <% end %>
        <% end %>
      </div>
    </ul>
  </div>
</section>
<% end %><!-- /END -->