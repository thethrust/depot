<!-- RELATED :: AUTHORS -->
<% related_authors = tag_list.map { |r| r["authors"] }.flatten.uniq.reject { |n| n.downcase == tag_name } %>
<% if !related_authors.nil? %>
<div class="related authors clearfix">
  <hr />
  <h3 class="related-heading">Related Authors</h3>
  <ul class="related list">
    <% related_authors.reject{|ra| ra.length < 1 }.sort.each do |t| %>
      <% if !t.nil? %>
        <li><a href="/<%= sluggify(t.strip) %>.html"><%= t.strip %></a></li>
      <% end %>
    <% end %>
  </ul>
</div>
<% end %><!-- /END -->