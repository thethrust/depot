<!-- RELATED :: TAGS -->
<% related_tags = tag_list.map { |r| r["tags"] }.flatten.uniq %>
<% if !related_tags.nil? %>
<div class="related tags clearfix">
  <hr />
  <h3 class="related-heading">Related Tags</h3>
  <ul class="related list">
    <% related_tags.each do |t| %>
      <% if !t.nil? %>
        <li><a href="/<%= sluggify(t.strip) %>.html"><%= t.strip %></a></li>
      <% end %>
    <% end %>
  </ul>
</div>
<% end %><!-- /END -->


